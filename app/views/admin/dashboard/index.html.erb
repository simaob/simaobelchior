<section class="container my-5">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-semibold">Admin Dashboard</h1>
        <%= button_to "Logout", logout_path, method: :delete, class: "btn btn-custom btn-github" %>
      </div>

      <div class="card border-0 shadow-sm">
        <div class="card-body p-4">
          <h5 class="card-title mb-3">Welcome, <%= current_user.email %>!</h5>
          <p class="text-muted mb-0">You are successfully logged in to the admin panel.</p>
          <p class="text-muted mt-3">Blog management features coming soon...</p>
        </div>
      </div>
    </div>
  </div>
</section>
