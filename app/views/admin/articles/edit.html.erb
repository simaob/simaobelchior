<div class="container my-4">
  <div class="mb-4">
    <%= link_to "← Back to articles", admin_articles_path, class: "text-decoration-none text-muted" %>
  </div>

  <div class="d-flex justify-content-between align-items-start mb-4">
    <div>
      <h1 class="fw-semibold mb-2">Edit Article</h1>
      <p class="text-muted">
        Created <%= @article.created_at.strftime("%B %-d, %Y") %>
        <% if @article.updated_at != @article.created_at %>
          • Last updated <%= @article.updated_at.strftime("%B %-d, %Y") %>
        <% end %>
      </p>
    </div>
    <%= button_to "Delete Article", admin_article_path(@article), method: :delete,
        data: { turbo_confirm: "Are you sure you want to delete this article?" },
        class: "btn btn-danger" %>
  </div>

  <%= render "form", article: @article %>
</div>
